{
  "lerna": "4.0.0",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "0.5.3",
  "changelog": {
    "repo": "PI",
    "labels": {
      "tag: feature": ":feat: New Feature",
      "tag: breaking change": ":break: Breaking Change",
      "tag: bugfix": ":fix: Bug Fix"
    },
    "cacheDir": ".changelog"
  },
  "bootstrap": {
    "ignore": "example/**"
  },
  "command": {
    "publish": {
      "message": "chore(release): publish %v"
    }
  },
  "packages": [
    "packages/*"
  ]
}
